#!/bin/bash
#testing if directory exists
if [ -d "AutoGeneratedFiles" ]; then
	echo "There is already a directory!"
	#automatically clearing files in directory if found	
	rm -rfv AutoGeneratedFiles/*
	touch AutoGeneratedFiles/File1
	touch AutoGeneratedFiles/File2
	touch AutoGeneratedFiles/File3
else
	mkdir AutoGeneratedFiles
	touch AutoGeneratedFiles/File1
	touch AutoGeneratedFiles/File2
	touch AutoGeneratedFiles/File3
fi

#start print statement
#print info on each file (creation dates)
echo "These are the files in AutoGeneratedFiles: "
stat -c "%n %y" AutoGeneratedFiles/File1
stat -c "%n %y" AutoGeneratedFiles/File2
stat -c "%n %y" AutoGeneratedFiles/File3
